# Habilitar el motor de reescritura de URLs
RewriteEngine On

# Redirigir todo al index.php para gestión de rutas
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [QSA,L]

# Opcional: Forzar HTTPS
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Opcional: Personalización de errores
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html

# Opcional: Proteger archivos sensibles
<FilesMatch "\.(env|htaccess|config\.php|sql|bak)$">
    Require all denied
</FilesMatch>

# Opcional: Habilitar compresión GZIP para mejorar el rendimiento
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css application/javascript text/javascript text/xml application/xml application/json
</IfModule>
